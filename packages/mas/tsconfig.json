{
    "compileOnSave": true,
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop":true,
        "strict": true,
        "module": "commonjs",
        "target": "ES2015",
        "noImplicitAny": false,
        "outDir": "./lib",
        "rootDir": "./src",
        "sourceMap": false,
        "forceConsistentCasingInFileNames": true,
        "pretty": true
    },
    "exclude": [
        "node_modules"
    ]
}